        {
          "name": "GET All Products",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/products",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "products"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status code is 200', function () { pm.response.to.have.status(200); });",
                  "pm.test('Response time < 2000ms', function(){ pm.expect(pm.response.responseTime).to.be.below(2000); });",
                  "pm.test('Body is JSON array', function () { pm.expect(pm.response.json()).to.be.an('array'); });",
                  "pm.test('Each product has id/title/price/category', function(){",
                  "  const arr = pm.response.json();",
                  "  pm.expect(arr.length).to.be.above(0);",
                  "  const p = arr[0];",
                  "  pm.expect(p).to.have.property('id');",
                  "  pm.expect(p).to.have.property('title');",
                  "  pm.expect(p).to.have.property('price');",
                  "  pm.expect(p).to.have.property('category');",
                  "});"
                ]
              }
            }
          ]
        },
